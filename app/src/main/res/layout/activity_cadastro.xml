<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Cadastrar produto"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_foto_produto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/txt_produto"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nome do produto"
        app:layout_constraintEnd_toEndOf="@+id/img_foto_produto"
        app:layout_constraintStart_toStartOf="@+id/img_foto_produto"
        app:layout_constraintTop_toBottomOf="@+id/img_foto_produto" />

    <EditText
        android:id="@+id/txt_qtd"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Quantidade"
        app:layout_constraintEnd_toEndOf="@+id/txt_produto"
        app:layout_constraintStart_toStartOf="@+id/txt_produto"
        app:layout_constraintTop_toBottomOf="@+id/txt_produto" />

    <EditText
        android:id="@+id/txt_valor"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="R$ 0.00"
        app:layout_constraintEnd_toEndOf="@+id/txt_qtd"
        app:layout_constraintStart_toStartOf="@+id/txt_qtd"
        app:layout_constraintTop_toBottomOf="@+id/txt_qtd" />

    <Button
        android:id="@+id/btn_inserir"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Inserir"
        app:layout_constraintEnd_toEndOf="@+id/txt_valor"
        app:layout_constraintStart_toStartOf="@+id/txt_valor"
        app:layout_constraintTop_toBottomOf="@+id/txt_valor" />

</androidx.constraintlayout.widget.ConstraintLayout>